  "scripts": {
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js --env=jsdom",
    "serve-dev": "NODE_ENV=development node server.js",
    "do-the-docker": "npm run docker-build-app && npm run docker-build-nginx && npm run docker-run-nginx && npm run docker-run-bacon && npm run docker-run-mangoes && echo \"SUCCESS ðŸŽ‰ . Open your browser to localhost:3000 and hard refresh to view your different spotizam instances!\"",
    "docker-build-app": "docker build -t spotizam-app .",
    "docker-build-nginx": "cd ./nginx-docker && docker build -t nginx-load-balancer .",
    "docker-run-nginx": "docker run -p 3000:80 --name SPOTIZAM_NGINX -d nginx-load-balancer ",
    "docker-run-bacon": "docker run -e \"REACT_APP_FOOD=Bacon\" -p 8081:8080  --name SPOTIZAM_BACON -d spotizam-app",
    "docker-run-mangoes": "docker run -e \"REACT_APP_FOOD=Pineapples\" -p 8082:8080 --name SPOTIZAM_PINEAPPLES -d spotizam-app",
    "docker-clean": "docker rm -f SPOTIZAM_PINEAPPLES SPOTIZAM_BACON SPOTIZAM_NGINX"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/node": "^10.11.2",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.8",
    "typescript": "^3.1.1"
  },
  "proxy": "http://localhost:8080",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(j|t)s?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(j|t)s?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "web.js",
      "js",
      "web.jsx",
      "jsx",
      "json",
      "node",
      "mjs"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "/Users/kriss/Fun/spotizam/tsconfig.test.json"
      }
    }
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  }
}
